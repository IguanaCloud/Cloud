pipeline {
    agent any
	tools {
      terraform 'terraform'
    }
    stages {
        stage('Setup Tools') {
            steps {
                sh """
                wget https://github.com/gruntwork-io/terragrunt/releases/download/${TERRAGRUNT_VERSION}/terragrunt_linux_amd64
                chmod +x terragrunt_linux_amd64
                mv terragrunt_linux_amd64 /usr/local/bin/terragrunt
                """
            }
        }
        stage('Terragrunt Init') {
            steps {
                script {
                    dir('/terraform/aws') {
                        sh 'terragrunt run-all init'
                    }
                }
            }
        }
        stage('Terragrunt Plan') {
            steps {
                script {
                    dir('/terraform/aws') {
                        sh 'terragrunt run-all plan'
                    }
                }
            }
        }
        stage('Terragrunt Destroy') {
            steps {
                script {
                    dir('/terraform/aws') {
                        sh 'terragrunt run-all destroy -auto-approve'
                    }
                }
            }
        }
    }
    post {
        always {
            cleanWs()
            sh """
            rm -f /usr/local/bin/terragrunt
            """
        }
    }
}